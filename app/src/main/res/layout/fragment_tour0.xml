<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.home.tour.tour0Fragment">

    <ImageView
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:src="@drawable/vector_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tokenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_border_rectangle"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGoBack">

        <TextView
            style="@style/regularTV"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/coin"
            android:padding="4dp"
            android:text="3.5"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:src="@drawable/coin_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        style="@style/regularTV"
        android:layout_marginTop="28dp"
        android:padding="4dp"
        android:text="@string/brisbane_tour"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoBack" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="616dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:scrollbars="vertical"
            android:id="@+id/RelativeLayout2">

            <TextView
                android:id="@+id/tg_heading0"
                style="@style/regularTV"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/federation_university_brisbane"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/areaTV0"
                style="@style/regularTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tg_heading0"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:text="@string/ann_street"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img0"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_below="@+id/areaTV0"
                android:foreground="@drawable/pic_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/img001" />

            <TextView
                android:id="@+id/tg_body1"
                style="@style/regularTV"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img0"
                android:layout_marginTop="24dp"
                android:text="@string/in_the_heart_of_queensland_s_vibrant_and_multicultural_capital_city_is_our_beautiful_brisbane_city_innovation_campus_which_is_moments_away_from_industry_partners_great_shopping_entertainment_and_cultural_centres_on_our_doorstep"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tg_body2"
                style="@style/regularTV"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tg_body1"
                android:layout_marginTop="24dp"
                android:text="@string/our_campus_provides_the_latest_learning_environments_collaborative_study_spaces_and_personalised_learning_and_support_services_in_addition_students_have_access_to_tech_hubs_and_transformational_learning_spaces_student_lounges_and_fully_equipped_study_rooms"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/map01"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_below="@+id/tg_body2"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/map_001" />

            <Button
                android:id="@+id/StartVirtualTour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/map01"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#000000"
                android:text="@string/start_virtual_tour"
                android:textSize="18sp" />

            <Button
                android:id="@+id/gd_feduni"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/StartVirtualTour"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#000000"
                android:text="@string/get_directions"
                android:textSize="18sp" />

            <Button
                android:id="@+id/lm_feduni"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/gd_feduni"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#000000"
                android:text="@string/learn_more"
                android:textSize="18sp" />


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>